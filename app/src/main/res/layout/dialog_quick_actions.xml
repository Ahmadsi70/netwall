<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="16dp">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Quick Actions"
		android:textStyle="bold"
		android:textSize="20sp"
		android:gravity="center"
		android:paddingBottom="8dp" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Block apps by category"
		android:textSize="14sp"
		android:textColor="#666666"
		android:gravity="center"
		android:paddingBottom="16dp" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:maxHeight="400dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Social Media -->
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/category_social_media"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				app:cardCornerRadius="12dp"
				app:cardElevation="2dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?attr/selectableItemBackground">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="16dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:text="ðŸ“±"
						android:textSize="32sp"
						android:gravity="center" />

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical"
						android:paddingStart="12dp"
						android:paddingEnd="12dp">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Social Media"
							android:textStyle="bold"
							android:textSize="16sp" />

						<TextView
							android:id="@+id/count_social_media"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Instagram, Facebook, TikTok..."
							android:textSize="12sp"
							android:textColor="#666666"
							android:layout_marginTop="4dp" />
					</LinearLayout>

					<ImageView
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:src="@android:drawable/ic_menu_add"
						android:tint="?attr/colorPrimary" />
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>

			<!-- Games -->
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/category_games"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				app:cardCornerRadius="12dp"
				app:cardElevation="2dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?attr/selectableItemBackground">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="16dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:text="ðŸŽ®"
						android:textSize="32sp"
						android:gravity="center" />

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical"
						android:paddingStart="12dp"
						android:paddingEnd="12dp">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Games"
							android:textStyle="bold"
							android:textSize="16sp" />

						<TextView
							android:id="@+id/count_games"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="PUBG, Free Fire, Clash..."
							android:textSize="12sp"
							android:textColor="#666666"
							android:layout_marginTop="4dp" />
					</LinearLayout>

					<ImageView
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:src="@android:drawable/ic_menu_add"
						android:tint="?attr/colorPrimary" />
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>

			<!-- Browsers -->
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/category_browsers"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				app:cardCornerRadius="12dp"
				app:cardElevation="2dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?attr/selectableItemBackground">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="16dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:text="ðŸŒ"
						android:textSize="32sp"
						android:gravity="center" />

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical"
						android:paddingStart="12dp"
						android:paddingEnd="12dp">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Browsers"
							android:textStyle="bold"
							android:textSize="16sp" />

						<TextView
							android:id="@+id/count_browsers"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Chrome, Firefox, Opera..."
							android:textSize="12sp"
							android:textColor="#666666"
							android:layout_marginTop="4dp" />
					</LinearLayout>

					<ImageView
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:src="@android:drawable/ic_menu_add"
						android:tint="?attr/colorPrimary" />
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>

			<!-- Entertainment -->
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/category_entertainment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				app:cardCornerRadius="12dp"
				app:cardElevation="2dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?attr/selectableItemBackground">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="16dp"
					android:gravity="center_vertical">

					<TextView
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:text="ðŸŽ¬"
						android:textSize="32sp"
						android:gravity="center" />

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical"
						android:paddingStart="12dp"
						android:paddingEnd="12dp">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Entertainment"
							android:textStyle="bold"
							android:textSize="16sp" />

						<TextView
							android:id="@+id/count_entertainment"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="YouTube, Netflix, Spotify..."
							android:textSize="12sp"
							android:textColor="#666666"
							android:layout_marginTop="4dp" />
					</LinearLayout>

					<ImageView
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:src="@android:drawable/ic_menu_add"
						android:tint="?attr/colorPrimary" />
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>

		</LinearLayout>
	</ScrollView>

	<Button
		android:id="@+id/btn_close"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Close"
		android:layout_marginTop="16dp"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout> 