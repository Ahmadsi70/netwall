<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ§ª Code Integrity Tester"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/primary_color" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This tool tests all major components of the app to ensure they work correctly and don't have missing implementations or crashes."
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/text_secondary" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/run_tests_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Run Tests"
            android:textSize="16sp" />

        <Button
            android:id="@+id/clear_results_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Clear"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Results -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Results:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@color/primary_color" />

    <!-- Scrollable Results -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="12dp">

        <TextView
            android:id="@+id/test_results_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click 'Run Tests' to start code integrity testing..."
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/text_primary" />

    </ScrollView>

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This tool helps identify missing implementations, crashes, and integration issues."
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/text_secondary" />

</LinearLayout>
